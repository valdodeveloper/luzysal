---
import GradientLayout from '../layouts/GradientLayout.astro';
import MusicalNotesBg from '../components/MusicalNotesBg.astro';
import SocialIcon from '../components/SocialIcon.astro';
import LuzYSal from '../assets/luz_sal.jpg';
const avatar = LuzYSal.src;
const links = [
	{ label: 'WhatsApp', url: 'https://wa.me/5581803526', icon: 'whatsapp', color: 'bg-[#25D366] text-white hover:shadow-[#25D366]/50' },
	{ label: 'Instagram', url: 'https://www.instagram.com/estudiantinaluzysal?igsh=MjNzMm8waXJja2ty', icon: 'instagram', color: 'bg-gradient-to-r from-[#f58529] via-[#dd2a7b] to-[#8134af] text-white hover:shadow-pink-500/40' },
	{ label: 'YouTube', url: 'https://youtube.com/', icon: 'youtube', color: 'bg-[#FF0000] text-white hover:shadow-red-500/50' },
	{ label: 'Facebook', url: 'https://www.facebook.com/share/1GX9JqvKP9/', icon: 'facebook', color: 'bg-[#1877F2] text-white hover:shadow-blue-500/50' },
	/* { label: 'TikTok', url: 'https://tiktok.com/', icon: 'tiktok', color: 'bg-[#010101] text-white hover:shadow-cyan-500/40' }, */
];
const gradient = 'linear-gradient(135deg,#43e97b 0%,#38f9d7 50%,#b983ff 100%)';
---
<GradientLayout gradient={gradient} title="Luz y Sal" avatar={avatar} subtitle="Somos la estudiantina Luz y Sal, visita nuestro sitios ðŸŽ¼" panel={false}>
	<MusicalNotesBg count={28} minMs={11000} maxMs={24000} />
	<div class="flex flex-col gap-4 sm:gap-6 w-full max-w-xl">
		{links.map((link, i) => (
			<a href={link.url} target="_blank" rel="noopener" class={`flex items-center gap-3 sm:gap-4 px-5 sm:px-7 py-3.5 sm:py-4 rounded-2xl font-semibold shadow-lg backdrop-blur-sm hover:scale-[1.03] transition-all duration-300 group ${link.color} shadow-lg`} style={`animation-delay:${i * 80}ms`}>
				<SocialIcon name={link.icon} class="w-6 h-6 sm:w-7 sm:h-7" />
				<span class="tracking-wide text-base sm:text-[1.05rem] leading-none">{link.label}</span>
			</a>
		))}
	</div>
</GradientLayout>
