---
const { title = "Contacto DGT" } = Astro.props;
import MusicIcon from '../assets/music_icon.png';
---

<html lang="es" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href={MusicIcon.src} />
    <title>{title}</title>
  </head>
  <body class="min-h-full bg-slate-950 text-slate-100 antialiased">
    <main class="mx-auto max-w-3xl p-6 space-y-6">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import "../assets/styles/tailwind.css";
</style>
