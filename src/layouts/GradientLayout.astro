---
const { gradient = 'linear-gradient(135deg,#667eea,#764ba2)', title = 'TÃ­tulo', avatar, subtitle, panel = true, bodyClass = '' } = Astro.props;
import MusicIcon from '../assets/music_icon.png';
---
<html lang="es" class="h-full">
  <head>
    <link rel="icon" type="image/png" href={MusicIcon.src} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class={`min-h-[100dvh] flex flex-col items-center justify-center ${bodyClass} px-4 sm:px-6`} style={`background:${gradient}`}>  
    {avatar && (
      <div class="flex flex-col items-center mb-4">
  <img src={avatar} alt="Avatar" class="w-40 h-40 rounded-full shadow-2xl ring-4 ring-white/40 object-cover" />
  {subtitle && <p class="mt-4 text-white/95 text-xl font-semibold drop-shadow-md text-center px-4 max-w-xl leading-snug">{subtitle}</p>}
      </div>
    )}
  <main class={`w-full max-w-md p-5 sm:p-6 rounded-xl transition ${panel ? 'bg-white/80 shadow-xl' : 'bg-transparent shadow-none'}`}>
      <slot />
    </main>
  </body>
</html>
<style is:global>
@import '../assets/styles/tailwind.css';
</style>
